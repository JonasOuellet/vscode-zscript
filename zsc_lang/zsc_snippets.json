{
	".source.zsc": {
        "If": {
            "prefix": "If",
            "body": "[If, ${1:statement},\n\t[${2:CommandToExecute}]\n]",
            "description": "Provides conditional execution of a commands group"
        },
        "IfElse": {
            "prefix": "IfElse",
            "body": "[If, ${1:statement},\n\t[${2:CommandToExecuteIfStatementIsTrue}]\n, /* Else */\n\t[${3:CommandToExecuteIfStatementIsFalse}]\n]",
            "description": "Provides conditional execution of a commands group"
        },
        "Loop": {
            "prefix": "Loop",
            "body": "[Loop, ${1:count},\n\t[${3:Command}]\n, ${2:counter}]",
            "description": "Repeats execution of the specified commands group"
        },
        "RoutineDef": {
            "prefix": "RoutineDef",
            "body": "[RoutineDef, ${1:name},\n\t[${3:Command}]\n]",
            "description": "Define a routine with no arg"
        },
        "RoutineDef1": {
            "prefix": "RoutineDef1",
            "body": "[RoutineDef, ${1:name},\n\t[${4:Command}]\n, ${2:arg} ${3:type}]",
            "description": "Define a routine with one arg"
        }
    }
}
